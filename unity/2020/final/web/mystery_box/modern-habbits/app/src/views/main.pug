doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='author' content='bhrdn')
    title Modern Habbits
    link(href='https://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet')
    link(href='https://unpkg.com/nes.css@2.3.0/css/nes.min.css' rel='stylesheet')
    style.
      html, body, pre, code, kbd, samp {
        font-family: "Press Start 2P";
      }
  body(style="background-color: #212529")
    div.container
      main(style="margin: 4rem; margin-top: 10%")
        center(style='margin-bottom: 1rem;')
          i.nes-kirby
          br
          span.nes-text.is-warning
            | It's so 
            del(style='margin-right: 1%;') hard
            | but stoppin's not an option

        .nes-container.is-dark.with-title
          p.title Mistery Box
          .nes-field.is-inline(style='background-color:#212529; padding: 1rem;')
            label(style='color:#fff;') Box Name
            input#box-name.nes-input.is-dark(type='text' placeholder='Kirby')

          .nes-field.is-inline(style='background-color:#212529; padding: 1rem;')
            label(style='color:#fff;') Secret Key
            input#box-secret.nes-input.is-dark(type='text' placeholder='31337')

          section
            button.nes-btn.is-warning#unlock-box(type='button' style='width: 100%') Unlock
            dialog#dialog-dark.nes-dialog.is-dark
              form(method='dialog')
                p.title Notification
                p.content N/A
                menu.dialog-menu
                  button.nes-btn.is-error(style='width: 100%') Close

  include partials/scripts